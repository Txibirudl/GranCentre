<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/fondo"

    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <include
            layout="@layout/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/textViewRestaurant"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center"
            android:text="Restaurants"
            android:textSize="40sp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textStyle="bold"
            android:textColor="@color/white"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="vertical">
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:backgroundTint="@color/white"
            android:id="@+id/spinnerRestaurants">

        </Spinner>


    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <GridLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            >

            <Button
                android:layout_width="90dp"
                android:layout_height="75dp"
                android:layout_row="0"
                android:theme="@style/Theme.Material3.DayNight"
                android:text="Tel."
                android:textSize="21sp"
                android:id="@+id/telefonAtarasii"/>

            <Button

                android:layout_width="90dp"
                android:layout_height="75dp"
                android:layout_row="0"
                android:theme="@style/Theme.Material3.DayNight"
                android:layout_column="1"

                android:text="Web"
                android:textSize="21sp"

                android:id="@+id/webAtarasii"/>

            <Button
                android:layout_width="90dp"
                android:layout_height="75dp"
                android:layout_row="0"
                android:layout_column="2"
                android:theme="@style/Theme.Material3.DayNight"
                android:text="Map"
                android:textSize="20sp"
                android:id="@+id/mapAtarasii"/>

            <ImageView
                android:layout_width="97dp"
                android:layout_height="75dp"
                android:layout_row="0"
                android:layout_column="3"

                android:src="@drawable/atarasii"/>

            <Button
                android:layout_width="90dp"
                android:layout_height="75dp"
                android:layout_row="1"
                android:layout_column="0"
                android:theme="@style/Theme.Material3.DayNight"
                android:text="Tel."
                android:textSize="21sp"
                android:id="@+id/telefonDominos"/>

            <Button

                android:layout_width="90dp"
                android:layout_height="75dp"
                android:layout_row="1"
                android:theme="@style/Theme.Material3.DayNight"
                android:layout_column="1"
                android:text="Web"
                android:textSize="21sp"
                android:id="@+id/webDominos"/>

            <Button
                android:layout_width="90dp"
                android:layout_height="75dp"
                android:layout_row="1"
                android:layout_column="2"
                android:theme="@style/Theme.Material3.DayNight"
                android:text="Map"
                android:textSize="20sp"
                android:id="@+id/mapDominos"/>

            <ImageView
                android:layout_width="97dp"
                android:layout_height="75dp"
                android:layout_row="1"
                android:layout_column="3"
                android:paddingLeft="5dp"
                android:src="@drawable/dominos"/>

            <Button
                android:layout_width="90dp"
                android:layout_height="75dp"
                android:layout_row="2"
                android:layout_column="0"
                android:theme="@style/Theme.Material3.DayNight"
                android:text="Tel."
                android:textSize="21sp"
                android:id="@+id/telefonTelepizza"/>

            <Button

                android:layout_width="90dp"
                android:layout_height="75dp"
                android:layout_row="2"
                android:theme="@style/Theme.Material3.DayNight"
                android:layout_column="1"
                android:text="Web"
                android:textSize="21sp"
                android:id="@+id/webTelepizza"/>

            <Button
                android:layout_width="90dp"
                android:layout_height="75dp"
                android:layout_row="2"
                android:layout_column="2"
                android:theme="@style/Theme.Material3.DayNight"
                android:text="Map"
                android:textSize="20sp"
                android:id="@+id/mapTelepizza"/>

            <ImageView
                android:layout_width="97dp"
                android:layout_height="75dp"
                android:layout_row="2"
                android:layout_column="3"
                android:paddingLeft="5dp"
                android:src="@drawable/telepizza"/>

            <Button
                android:layout_width="90dp"
                android:layout_height="75dp"
                android:layout_row="3"
                android:layout_column="0"
                android:theme="@style/Theme.Material3.DayNight"
                android:text="Tel."
                android:textSize="21sp"
                android:id="@+id/telefonMcdonalds"/>

            <Button

                android:layout_width="90dp"
                android:layout_height="75dp"
                android:layout_row="3"
                android:theme="@style/Theme.Material3.DayNight"
                android:layout_column="1"
                android:text="Web"
                android:textSize="21sp"
                android:id="@+id/webMcdonalds"/>

            <Button
                android:layout_width="90dp"
                android:layout_height="75dp"
                android:layout_row="3"
                android:layout_column="2"
                android:theme="@style/Theme.Material3.DayNight"
                android:text="Map"
                android:textSize="20sp"
                android:id="@+id/mapMcdonalds"/>

            <ImageView
                android:layout_width="97dp"
                android:layout_height="75dp"
                android:layout_row="3"
                android:layout_column="3"
                android:paddingLeft="5dp"
                android:src="@drawable/mcdonalds"/>

            <Button
                android:layout_width="90dp"
                android:layout_height="75dp"
                android:layout_row="4"
                android:layout_column="0"
                android:theme="@style/Theme.Material3.DayNight"
                android:text="Tel."
                android:textSize="21sp"
                android:id="@+id/telefonMifune"/>

            <Button

                android:layout_width="90dp"
                android:layout_height="75dp"
                android:layout_row="4"
                android:theme="@style/Theme.Material3.DayNight"
                android:layout_column="1"
                android:text="Web"
                android:textSize="21sp"
                android:id="@+id/webMifune"/>

            <Button
                android:layout_width="90dp"
                android:layout_height="75dp"
                android:layout_row="4"
                android:layout_column="2"
                android:theme="@style/Theme.Material3.DayNight"
                android:text="Map"
                android:textSize="20sp"
                android:id="@+id/mapMifune"/>

            <ImageView
                android:layout_width="97dp"
                android:layout_height="75dp"
                android:layout_row="4"
                android:layout_column="3"
                android:paddingLeft="5dp"
                android:src="@drawable/mifune"/>

            <Button
                android:layout_width="90dp"
                android:layout_height="75dp"
                android:layout_row="5"
                android:layout_column="0"
                android:theme="@style/Theme.Material3.DayNight"
                android:text="Tel."
                android:textSize="21sp"
                android:id="@+id/telefonWagaya"/>

            <Button

                android:layout_width="90dp"
                android:layout_height="75dp"
                android:layout_row="5"
                android:theme="@style/Theme.Material3.DayNight"
                android:layout_column="1"
                android:text="Web"
                android:textSize="21sp"
                android:id="@+id/webWagaya"/>

            <Button
                android:layout_width="90dp"
                android:layout_height="75dp"
                android:layout_row="5"
                android:layout_column="2"
                android:theme="@style/Theme.Material3.DayNight"
                android:text="Map"
                android:textSize="20sp"
                android:id="@+id/mapWagaya"/>

            <ImageView
                android:layout_width="97dp"
                android:layout_height="75dp"
                android:layout_row="5"
                android:layout_column="3"
                android:paddingLeft="5dp"
                android:src="@drawable/wagaya"/>
        </GridLayout>
    </ScrollView>
</LinearLayout>